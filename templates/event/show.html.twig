{% extends 'base.html.twig' %}

{% block title %}{{ event.title }} - Events{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">
        {# Back button #}
        <div class="mb-6">
            <a href="{{ path('app_event_index') }}" 
               class="inline-flex items-center text-blue-600 hover:text-blue-800">
                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd"></path>
                </svg>
                Back to Events
            </a>
        </div>

        {# Event header #}
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <div class="px-6 py-8">
                <div class="flex justify-between items-start mb-4">
                    <h1 class="text-3xl font-bold text-gray-900">{{ event.title }}</h1>
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium
                        {% if event.status == constant('App\\Entity\\Event::STATUS_PLANNED') %}bg-blue-100 text-blue-800
                        {% elseif event.status == constant('App\\Entity\\Event::STATUS_ONGOING') %}bg-green-100 text-green-800
                        {% elseif event.status == constant('App\\Entity\\Event::STATUS_COMPLETED') %}bg-gray-100 text-gray-800
                        {% elseif event.status == constant('App\\Entity\\Event::STATUS_CANCELLED') %}bg-red-100 text-red-800
                        {% else %}bg-gray-100 text-gray-800{% endif %}">
                        {{ event.status|title }}
                    </span>
                </div>

                {# Event details #}
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                    <div>
                        <h3 class="text-lg font-semibold text-gray-900 mb-3">Event Details</h3>
                        
                        {# Start Date/Time #}
                        <div class="flex items-center mb-3">
                            <svg class="w-5 h-5 mr-3 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
                            </svg>
                            <div>
                                <p class="font-medium text-gray-900">Start Date</p>
                                <p class="text-gray-600">{{ event.startDate|date('l, F j, Y \\a\\t g:i A') }}</p>
                            </div>
                        </div>

                        {# End Date/Time #}
                        {% if event.endDate %}
                        <div class="flex items-center mb-3">
                            <svg class="w-5 h-5 mr-3 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
                            </svg>
                            <div>
                                <p class="font-medium text-gray-900">End Date</p>
                                <p class="text-gray-600">{{ event.endDate|date('l, F j, Y \\a\\t g:i A') }}</p>
                            </div>
                        </div>
                        {% endif %}

                        {# Location #}
                        {% if event.location %}
                        <div class="flex items-center mb-3">
                            <svg class="w-5 h-5 mr-3 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
                            </svg>
                            <div>
                                <p class="font-medium text-gray-900">Location</p>
                                <p class="text-gray-600">{{ event.location }}</p>
                            </div>
                        </div>
                        {% endif %}

                        {# Created by #}
                        {% if event.createdBy %}
                        <div class="flex items-center mb-3">
                            <svg class="w-5 h-5 mr-3 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                            </svg>
                            <div>
                                <p class="font-medium text-gray-900">Organizer</p>
                                <p class="text-gray-600">{{ event.createdBy.firstName }} {{ event.createdBy.lastName }}</p>
                            </div>
                        </div>
                        {% endif %}
                    </div>

                    <div>
                        <h3 class="text-lg font-semibold text-gray-900 mb-3">Participation</h3>
                        
                        {# Participant count #}
                        <div class="flex items-center mb-3">
                            <svg class="w-5 h-5 mr-3 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z"></path>
                            </svg>
                            <div>
                                <p class="font-medium text-gray-900">Participants</p>
                                <p class="text-gray-600">
                                    {{ event.participantCount }} participant{{ event.participantCount != 1 ? 's' : '' }}
                                    {% if event.maxParticipants %}
                                        / {{ event.maxParticipants }} max
                                    {% endif %}
                                </p>
                            </div>
                        </div>

                        {# Registration status #}
                        {% if is_granted('ROLE_USER') %}
                            {% if canRegister %}
                                <div class="bg-green-50 border border-green-200 rounded-lg p-4 mb-4">
                                    <div class="flex">
                                        <svg class="w-5 h-5 text-green-400 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                                        </svg>
                                        <div>
                                            <h4 class="text-sm font-medium text-green-800">Registration Available</h4>
                                            <p class="text-sm text-green-700">You can register for this event.</p>
                                        </div>
                                    </div>
                                </div>
                            {% elseif isRegistered %}
                                <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-4">
                                    <div class="flex">
                                        <svg class="w-5 h-5 text-blue-400 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                                        </svg>
                                        <div>
                                            <h4 class="text-sm font-medium text-blue-800">You're Registered!</h4>
                                            <p class="text-sm text-blue-700">You are registered for this event.</p>
                                        </div>
                                    </div>
                                </div>
                            {% else %}
                                <div class="bg-gray-50 border border-gray-200 rounded-lg p-4 mb-4">
                                    <div class="flex">
                                        <svg class="w-5 h-5 text-gray-400 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                                        </svg>
                                        <div>
                                            <h4 class="text-sm font-medium text-gray-800">Registration Unavailable</h4>
                                            <p class="text-sm text-gray-700">Registration is not available for this event.</p>
                                        </div>
                                    </div>
                                </div>
                            {% endif %}
                        {% endif %}
                    </div>
                </div>

                {# Description #}
                {% if event.description %}
                <div class="mb-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-3">Description</h3>
                    <div class="prose max-w-none">
                        <p class="text-gray-700 leading-relaxed">{{ event.description|nl2br }}</p>
                    </div>
                </div>
                {% endif %}

                {# Action buttons #}
                <div class="flex space-x-4 pt-6 border-t border-gray-200">
                    {% if is_granted('ROLE_USER') %}
                        {% if canRegister %}
                            <form method="post" action="{{ path('app_event_register', {'id': event.id}) }}" class="inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('register' ~ event.id) }}">
                                <button type="submit" class="bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-6 rounded-lg transition duration-200">
                                    Register for Event
                                </button>
                            </form>
                        {% elseif isRegistered %}
                            <form method="post" action="{{ path('app_event_unregister', {'id': event.id}) }}" class="inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('unregister' ~ event.id) }}">
                                <button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-6 rounded-lg transition duration-200">
                                    Unregister
                                </button>
                            </form>
                        {% endif %}
                    {% endif %}

                    {# Edit/Delete buttons for event creators/admins #}
                    {% if canEdit %}
                        <a href="{{ path('app_event_edit', {'id': event.id}) }}" 
                           class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded-lg transition duration-200">
                            Edit Event
                        </a>
                    {% endif %}
                    {% if canDelete %}
                        <form method="post" action="{{ path('app_event_delete', {'id': event.id}) }}" class="inline">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
                            <button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-6 rounded-lg transition duration-200">
                                Delete Event
                            </button>
                        </form>
                    {% endif %}
                </div>
            </div>
        </div>

        {# Event metadata #}
        {% if event.createdAt or event.updatedAt %}
        <div class="mt-6 text-sm text-gray-500 text-center">
            {% if event.createdAt %}
                Created {{ event.createdAt|date('M j, Y \\a\\t g:i A') }}
            {% endif %}
            {% if event.updatedAt and event.updatedAt != event.createdAt %}
                • Updated {{ event.updatedAt|date('M j, Y \\a\\t g:i A') }}
            {% endif %}
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}
